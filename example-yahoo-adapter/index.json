{
  "themes": {
    "LIGHT": "boolean(//body[@style='background-color: #FFFFFF;'] | //body[@style='background-color: rgb(255, 255, 255);'])",
    "DARK": "boolean(//body[@style='background-color: rgb(21, 32, 43);'] | //body[@style='background-color: rgb(0, 0, 0);'])"
  },
  "contexts": {
    "GLOBAL": {
      "containerSelector": "html",
      "contextBuilder": {
        "id": "string('global')",
        "websiteName": "string(//title)"
      }
    },
    "POST": {
      "containerSelector": "div#results",
      "contextSelector": ".relsrch",
      "widgets": {
        "button": {
          "styles": "styles/post/button.css",
          "insertionPoint": ".compTitle.options-toggle",
          "insert": "end"
        }
      },
      "contextBuilder": {
        "id": "string(.//*[(@data-matarget='algo')]/@href)",
        "title": "string(.//*[(@data-matarget='algo')]/@aria-label)",
        "link": "string(.//*[(@data-matarget='algo')]/@href)"
      }
    },
    "PROFILE": {
      "containerSelector": "html",
      "contextSelector": "a#logo",
      "widgets": {
        "avatarBadge": {
          "styles": "styles/profile/avatarBadge.css",
          "insertionPoint": "",
          "insert": "end"
        }
      },
      "contextBuilder": {
        "id": "string(.)"
      }
    }
  }
}